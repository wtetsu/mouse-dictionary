{
  "name": "Mouse Dictionary",
  "description": "Mouse Dictionary",
  "version": "1.0.6",
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": ["storage", "unlimitedStorage", "activeTab", "tabs", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Mouse Dictionary"
  },
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": ["data/*.json"]
}
